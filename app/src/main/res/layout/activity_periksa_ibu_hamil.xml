<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ibu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abdulwahab.mmt.com.example.abdulwahab.SIBAYU.Activity.PeriksaIbuHamil">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/bgKedua"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Periksa Ibu Hamil">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparan"
        android:layout_below="@+id/toolbarok"
        android:paddingBottom="30dip">
        <TableLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="5dip">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"

                    android:text="Nama"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
    
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:id="@+id/namabumil"
                    android:hint="nama pasien"
                    android:gravity="left|center" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Suami"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:id="@+id/namasuami"
                    android:hint="nama suami"
                    android:gravity="left|center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="umur"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:id="@+id/umurbumil"
                    android:hint="umur"
                    android:gravity="left|center" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Desa"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerpilihdesa"
                    android:textSize="20sp"
                    android:clipChildren="true"
                    android:entries="@array/Desa"
                    android:layout_alignParentStart="true"
                    android:spinnerMode="dropdown"
                    android:layout_alignParentLeft="true" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:elevation="0dip"
                    android:text="Jaminan"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerjaminan"
                    android:textSize="20sp"
                    android:clipChildren="true"
                    android:entries="@array/jaminan"
                    android:layout_alignParentStart="false"
                    android:spinnerMode="dropdown"
                    android:layout_alignParentLeft="false" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="GPA"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:id="@+id/gpabumil"
                    android:gravity="left|center" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="HPHT"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/hpht"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="datetime"
                    android:onClick="setDate"
                    android:textSize="20sp"
                    android:id="@+id/viewtanggal"
                    android:hint="Hari terahir haid"
                    android:gravity="left|center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="TP"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  "
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:id="@+id/viewhp"
                    android:hint="Hari persalinan"
                    android:inputType="date" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="10T"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  "
                    android:onClick="cek10t"
                    android:hint="Data Tersimpan"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:id="@+id/view10t" />


            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dip"
                android:paddingTop="5dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:elevation="10dip"
                    android:text="Komplikasi"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:elevation="10dip"
                    android:text="  :"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/menuitem_background"
                    android:text="  "
                    android:hint="Data Tersimpan"
                    android:onClick="komplikasi"
                    android:textColorLink="#FFFFFF"
                    android:textSize="20sp"
                    android:id="@+id/viewkomplikasi" />

            </TableRow>

        </TableLayout>

    </ScrollView>
</RelativeLayout>
