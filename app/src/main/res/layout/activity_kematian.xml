<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kematian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ibu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdulwahab.mmt.com.example.abdulwahab.SIBAYU.FragmentMenu.BarKematian">

    <TableLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                
                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="Jumlah Kematian Ibu"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                
                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                
                android:layout_height="wrap_content"
                android:id="@+id/kematianibu" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow">

            <TextView
                
                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="Jumlah Kematian Bayi"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                
                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                
                android:layout_height="wrap_content"
                android:id="@+id/kematiananak" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal"
                android:hint="Pilih Desa Dahulu"
                android:id="@+id/ibu" />

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:id="@+id/kematianibudesa" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal"
                android:hint="Pilih Desa Dahulu"
                android:id="@+id/bayii" />

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
               
                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:id="@+id/kematianbayidesa" />

        </TableRow>

        <TableRow android:gravity="top|center">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinercekkematian"
                android:clipChildren="true"
                android:entries="@array/Desa"
                android:spinnerMode="dropdown"
                android:layout_marginTop="60dip"
                android:gravity="center" />


        </TableRow>
        <TableRow android:gravity="center">
            <Button
                android:text="Tampilkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tampil" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
