<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_dasbor_bidan"
    android:layout_alignParentStart="true"
    android:weightSum="1"
    tools:context="com.example.abdulwahab.mmt.actifity.BarKasus"
    android:layout_alignParentLeft="true">

    <TableLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"

                android:text="Total Kematian Di Indramayu"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"

                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:id="@+id/kematianibu" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow">

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"

                android:text="Total Kematian Di Indramayu"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"

                android:text="  :"
                android:textColorLink="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView

                android:layout_height="wrap_content"
                android:id="@+id/kematiananak" />

            </TableRow>
    </TableLayout>

    <TextView
        android:text="Grafik 5 Desa Dengan Kematian tertinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:gravity="center"
        android:textSize="16sp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/grafikkematian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dip" />


</LinearLayout>